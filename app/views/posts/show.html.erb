<p id="notice"><%= notice %></p>
<div class="well well-lg">
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry %>
</p>

<div id="comments">
  <%= render 'comments/form', comment: @comment %>

  <% @post.comments.each do |comment| %>
    <div class="well well-sm">
      <%= comment.author %> says... <br />
      <%= comment.comment_entry %> <br />
      <%= comment.created_at %>
    </div>
  <% end %>
</div>
</div>
<button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_post_path(@post) %></button> |
<button type="button" class="btn btn-primary"><%= link_to 'Back', posts_path %>
